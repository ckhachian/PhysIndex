source ${OPENSHIFT_HOMEDIR}python/virtenv/bin/activate
 
export PYTHON_EGG_CACHE=${OPENSHIFT_HOME_DIR}python/virtenv/lib/python-2.7/site-packages

echo "Executing 'python ${OPENSHIFT_REPO_DIR}physindex/manage.py jsoninit'"
python "$OPENSHIFT_REPO_DIR"physindex/manage.py jsoninit

echo "Executing 'python ${OPENSHIFT_REPO_DIR}physindex/manage.py collectstatic --noinput -v0'"
python "$OPENSHIFT_REPO_DIR"physindex/manage.py collectstatic --noinput -v0

if [ ! -d $OPENSHIFT_DATA_DIR/media ]; then
mkdir $OPENSHIFT_DATA_DIR/media
fi
 
ln -sf $OPENSHIFT_DATA_DIR/media $OPENSHIFT_REPO_DIR/wsgi/static/media